	<error-page>
		<error-code>404</error-code>
		<location>/404.xhtml</location>
	</error-page>


	<context-param>
		<param-name>facelets.LIBRARIES</param-name>
		<param-value>/WEB-INF/componentes/facelets.taglib.xml</param-value>
	</context-param>






</web-app>